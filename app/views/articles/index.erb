<h1>Listing Blog</h1>
<%= link_to 'New article', new_article_path %>
<table>
    <tr>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>
    <% @articles.each do |article| %>

        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Lihat', article_path(article) %></td>
        </tr>

    <% end %>
</table>